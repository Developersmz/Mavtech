<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- Sidebar de Navegação -->
    <aside class="sidebar">
        <h2>Dashboard</h2>
        <nav>
            <ul>
                <li><a href="#overview" class="nav-item active">Visão Geral</a></li>
                <li><a href="#analytics" class="nav-item">Análises</a></li>
                <li><a href="#settings" class="nav-item">Configurações</a></li>
                <li><a href="#profile" class="nav-item">Perfil</a></li>
                <li><a href="/auth/signout" class="logout">Sair</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Conteúdo Principal -->
    <main class="main-content">
        <!-- Cabeçalho -->
        <header class="header">
            <h1>Bem-vindo ao Painel de Controle</h1>
            <p>Data: <span id="current-date">{{date}}</span></p>
        </header>

        <!-- Visão Geral do Dashboard -->
        <section id="overview" class="section">
            <h2>Visão Geral</h2>
            <div class="overview-cards">
                <article class="card">
                    <h3>Usuários</h3>
                    <p>Total: {{numberUsers}}</p>
                </article>
                <article class="card">
                    <h3>Programas</h3>
                    <p>Total: {{numberPrograms}}</p>
                </article>
                <article class="card">
                    <h3>Projetos</h3>
                    <p>Ativos: {{numberServices}}</p>
                </article>
                <article class="card">
                    <h3>Testemunhos</h3>
                    <p>Total: {{numberTestimonies}}</p>
                </article>
                <article class="card">
                    <h3>Blog</h3>
                    <p>publicados: {{numberBlog}}</p>
                </article>
            </div>
        </section>

        <!-- Seção de Análises -->
        <section id="analytics" class="section">
            <h2>Análises</h2>
            <div class="chart-container">
                <button type="button" class="btn btn-primary"><a href="/admin/dashboard/add" style="text-decoration: none; color: #fff;">Action</a></button>
            </div>
        </section>

        <!-- Seção de Configurações -->
        <section id="settings" class="section">
            <h2>Configurações</h2>
            <label for="theme">Tema:</label>
            <select id="theme" name="theme">
                <option value="light">Claro</option>
                <option value="dark">Escuro</option>
            </select>
            <button type="button" id="saveTheme" class="btn btn-primary">Salvar</button>
        </section>

        <!-- Perfil do Usuário -->
        <section id="profile" class="section">
            <h2>Perfil do administrador</h2>
            <p>Nome: {{admin.username}}</p>
            <p>Email: {{admin.email}}</p>
        </section>
    </main>

    <!-- JavaScript -->
    <script src="/js/dashboard.js"></script>
</body>
</html>

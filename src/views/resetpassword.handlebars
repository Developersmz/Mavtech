{{!-- CSS --}}
<link rel="stylesheet" href="/css/auth.css">

<main class="main">
   <div class="container">
     <div class="bg-img"></div>
     <div class="row">
       <div class="form">
         <div class="section-title">
           <h2>Redifinição da senha</h2>
         </div>
 
         <form action="/auth/changePass/{{token}}" method="POST">   
           <div class="form-group">
             <label for="newpass">Digite uma nova senha</label>
             <input type="password" id="newpass" name="newpass" class="form-control" required>
           </div>
           <div class="form-group">
             <label for="confpass">Confirme a senha</label>
             <input type="password" id="confpass" name="confpass" class="form-control" required>
           </div>
           {{#if error}}
              <div class="alert alert-danger">
                <p>{{error}}</p>
              </div>
            {{/if}}
            {{#if success}}
              <div class="success alert-success">
                <p>{{success}}</p>
              </div>
            {{/if}}
           <button type="submit" class="form-control">Redefinir</button>
         </form>
       </div>
     </div>
   </div>
 </main>